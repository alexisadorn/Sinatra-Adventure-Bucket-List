<h1><%= @experience.description %></h1>
<strong>Country to Visit:</strong> <%= @experience.country.name %>
<% if @experience.user_id == @user.id %>
  <h3>From Your Travel Bucket List</h3>
<% else %>
  <h3>From <%= @experience.user.name %>'s Travel Bucket List</h3>
  <input type="button" value="Add this to my List">
<% end %>

<p>Categories</p>
<% @experience.categories.each do |c| %>
  <ul>
    <li><%= c.name %></li>
  </ul>
<% end %>
<% if @experience.user_id == @user.id %>
  <a href="/experiences/<%= @experience.id %>/edit"><input type="button" value="Edit Experience"></a>
  <form method="POST" action="/experiences/<%= @experience.id %>/delete">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete this Experience">
  </form>
<% end %>
<p><a href="/experiences">Back to experiences list</a></p>
